// nextflow.config
manifest {
    description = 'Protein structure analysis making use of Rosetta, STRUM and GROMACS'
    nextflowVersion = '!>=23.10.1'
    author = 'Tammara Poa Siang Koh'
    name = 'PSA (Protein structure analysis) framework'
    version = '1.0'
}

profiles {
    standard {
        // Configuration for local execution
        process.executor = 'local'
        process.cpus = 2
        process.memory = '4GB'
    }

    cluster_PBS {
        // Configuration for a cluster (e.g., SLURM, PBS)
        process.executor = 'pbs'
        process.queue = 'your_queue'
        process.cpus = 8
        process.memory = '16GB'
        process.time = '12h'
    }

    cluster_SLURM {
        // Configuration for a cluster (e.g., SLURM, PBS)
        process.executor = 'slurm'
        process.queue = 'your_queue'
        process.cpus = 8
        process.memory = '16GB'
        process.time = '12h'
    }
}

singularity {
    enabled = true
    autoMounts = true
    simgDir = '/home/21616019/Documents/PSA_framework/images'
    // Additional Singularity settings
}

// Define the location to store temporary files (adjust as needed)
scratch = '/home/21616019/Documents/PSA_framework/scratch'

// Define the location for the Nextflow work directory (adjust as needed)
workDir = '/home/21616019/Documents/PSA_framework/work'

// Define parameters for each process
//params.fromFile('params.config')


nextflow.enable.moduleBinaries = true

process {
    withName:ROSETTA_FIXBB {
        container = 'images/rosetta_23_45_reduced.sif'
    }
}